<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_report_tahun"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:id="@+id/bulan_report_tahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Bulan"></TextView>

        <TextView
            android:layout_weight="1"
            android:id="@+id/jumlah_report_tahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bulan_report_tahun"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textAlignment="center"
            android:text="jumlah"></TextView>
    </LinearLayout>


</RelativeLayout>